<div class="announcement-row" style="display:flex;align-items:center;justify-content:space-between;gap:16px;">
  <div class="announcement-text">{{ section.settings.text }}</div>
  <div class="announcement-icons">{% render 'header-icons' %}</div>
</div>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "t:sections.announcement-bar.blocks.announcement.settings.text.default",
      "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name"
    }
  ]
}
{% endschema %}
